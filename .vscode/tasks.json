{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "tsc -p .",
            "args": [],
            "problemMatcher": [
                "$tsc",
                "$jshint"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "build-watch",
            "type": "shell",
            "command": "npx",
            "args": [
                "tsc",
                "-p",
                ".",
                "--watch"
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "typescript",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting incremental compilation\\.\\.\\.$",
                    "endsPattern": "Watching for file changes\\.$"
                    
                }
            }
        }
    ]
}